@model AppUser

<div class="account-menu dropcart__body">
    @if (Model == null)
    {
        <form asp-controller="Account" asp-action="Login" class="account-menu__form">
            <div class="account-menu__form-title">Log In to Your Account</div>
            <div class="form-group">
                <label asp-for="Email" class="sr-only">Email address</label>
                <input asp-for="Email"
                       type="email"
                       class="form-control form-control-sm"
                       placeholder="Email address">
            </div>
            <div class="form-group">
                <label asp-for="Password" class="sr-only">Password</label>
                <div class="account-menu__form-forgot">
                    <input asp-for="Password"
                           type="password"
                           class="form-control form-control-sm"
                           placeholder="Password">
                    <a href="#" class="account-menu__form-forgot-link">Forgot?</a>
                </div>
            </div>
            <div class="form-group account-menu__form-button">
                <button type="submit" class="btn btn-primary btn-sm">Login</button>
            </div>
            <div class="account-menu__form-link">
                <a asp-controller="Account" asp-action="Register">Create An Account</a>
            </div>
        </form>
    }
    else
    {
        <div class="account-menu__user">
            <div class="account-menu__user-info">
                <div class="account-menu__user-name">@Model.UserName</div>
                <div class="account-menu__user-email">@Model.Email</div>
            </div>
        </div>

    }
    <div class="account-menu__divider"></div>
    <ul class="account-menu__links">
        <li>
            <a asp-controller="Account" asp-action="Edit">Edit Profile</a>
        </li>
        <li>
            <a asp-controller="Order" asp-action="Index">Order History</a>
        </li>
        <li>
            <a asp-controller="Account" asp-action="Password">Password</a>
        </li>
    </ul>
    <div class="account-menu__divider"></div>
    <ul class="account-menu__links">
        <li>
            <a asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    </ul>
</div>
