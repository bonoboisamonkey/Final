
@{
    ViewData["Title"] = "Add";
}
@model Product

<div class="container">
    @if (Model == null)
    {
        <h1>Something went wrong</h1>
    }
    else
    {
        <h1>@Model.ProductName added to your cart</h1>
        <a class="btn btn-primary product-card__addtocart" asp-controller="Shop" asp-action="Index">Continue Shopping</a>

    }

</div>